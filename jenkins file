
pipeline {

    agent any {
    
       stages {
       
         stage("checkout")
            echo 'checking out'
            
            }
            
         }  
       
         stage("Build"){
           
           steps {
             echo 'building the application'
             }
             
          }
           
           stage("test"){
           
              steps {
                echo 'testing the application'
                }
            }    
                
            stage('Deploy') {
            
               steps {
                 echo ' testing the deployment'
                 
                 }
                 
            }  
       }
}       
            
            
            
           
         
         
